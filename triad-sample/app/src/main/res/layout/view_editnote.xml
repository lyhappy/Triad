<?xml version="1.0" encoding="utf-8"?>
<com.nhaarman.triad.sample.editnote.EditNoteView
  android:id="@+id/view_editnote"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <EditText
    android:id="@+id/view_editnote_titleet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/title" />

  <Button
    android:id="@+id/view_editnote_savebutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:text="@string/save" />

  <EditText
    android:id="@+id/view_editnote_contentset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/view_editnote_savebutton"
    android:layout_below="@id/view_editnote_titleet"
    android:hint="@string/contents" />


</com.nhaarman.triad.sample.editnote.EditNoteView>