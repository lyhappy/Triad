<?xml version="1.0" encoding="utf-8"?>
<com.nhaarman.triad.sample.notes.NotesView
  android:id="@+id/view_notes"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp">

  <Button
    android:id="@+id/view_notes_createnotebutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="@string/create_note" />

  <com.nhaarman.triad.sample.notes.noteslist.NotesListView
    android:id="@+id/view_notes_noteslistview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/view_notes_createnotebutton">

    <ListView
      android:id="@+id/view_notes_listview"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  </com.nhaarman.triad.sample.notes.noteslist.NotesListView>


</com.nhaarman.triad.sample.notes.NotesView>